<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="lancaster.controller.DailySheetController"
            style="-fx-background-color: #122023;">
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 20;">
            <Button text="Back" onAction="#handleBack" prefWidth="100" prefHeight="40"
                    style="-fx-font-size: 14px;"/>
            <Label fx:id="lblDate" text="Daily Sheet" style="-fx-text-fill: #FFFFFF; -fx-font-size: 24px;"/>
        </HBox>
    </top>
    <center>
        <TableView fx:id="tableDaily">
            <columns>
                <TableColumn fx:id="colSpace" text="Room" prefWidth="200"/>
                <TableColumn fx:id="colStartTime" text="Start Time" prefWidth="150"/>
                <TableColumn fx:id="colEndTime" text="End Time" prefWidth="150"/>
                <TableColumn fx:id="colBy" text="Booked By" prefWidth="200"/>
                <TableColumn fx:id="colConfig" text="Configuration" prefWidth="200"/>
            </columns>
            <BorderPane.margin>
                <Insets left="20" right="20" bottom="20"/>
            </BorderPane.margin>
        </TableView>
    </center>
</BorderPane>