<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainBorderPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="lancaster.controller.RoomLayoutController">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <!-- Banner with Logo -->
                <HBox prefHeight="80"
                      style="-fx-background-color: #1C2526; -fx-padding: 10 10 0 10; -fx-alignment: CENTER_LEFT;">
                    <ImageView fx:id="logo" fitHeight="100" fitWidth="175">
                        <Image url="@../LancasterLogo.png"/>
                    </ImageView>
                    <Label alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 20;"
                           text="Lancaster Music Hall Rooms"/>
                </HBox>
                <!-- Room Selection Toggle Buttons -->
                <HBox alignment="CENTER" spacing="5.0">
                    <fx:define>
                        <ToggleGroup fx:id="roomToggleGroup"/>
                    </fx:define>
                    <ToggleButton fx:id="greenRoomToggle" onAction="#handleGreenRoomToggle" text="Green Room"
                                  toggleGroup="$roomToggleGroup"
                                  style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-background-radius: 5;">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </ToggleButton>
                    <ToggleButton fx:id="bronteBoardroomToggle" onAction="#handleBronteBoardroomToggle"
                                  text="BrontÃ« Boardroom" toggleGroup="$roomToggleGroup"
                                  style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-background-radius: 5;">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </ToggleButton>
                    <ToggleButton fx:id="dickensDenToggle" onAction="#handleDickensDenToggle" text="Dickens Den"
                                  toggleGroup="$roomToggleGroup"
                                  style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-background-radius: 5;">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </ToggleButton>
                    <ToggleButton fx:id="poeParlorToggle" onAction="#handlePoeParlorToggle" text="Poe Parlor"
                                  toggleGroup="$roomToggleGroup"
                                  style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-background-radius: 5;">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </ToggleButton>
                    <ToggleButton fx:id="globeRoomToggle" onAction="#handleGlobeRoomToggle" text="Globe Room"
                                  toggleGroup="$roomToggleGroup"
                                  style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-background-radius: 5;">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </ToggleButton>
                    <ToggleButton fx:id="chekhovChamberToggle" onAction="#handleChekhovChamberToggle"
                                  text="Chekhov Chamber" toggleGroup="$roomToggleGroup"
                                  style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-background-radius: 5;">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </ToggleButton>
                </HBox>
                <!-- Room Name -->
                <Label fx:id="roomNameLabel" alignment="CENTER" maxWidth="Infinity" text="Green Room"
                       textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
                <!-- Status Indicators -->
                <HBox alignment="CENTER" spacing="10">
                    <HBox alignment="CENTER"
                          style="-fx-background-color: #E8F5E9; -fx-padding: 5; -fx-background-radius: 5;">
                        <Label style="-fx-text-fill: #4CAF50; -fx-font-weight: bold;" text="Available"/>
                    </HBox>
                    <HBox alignment="CENTER"
                          style="-fx-background-color: #FFF8E1; -fx-padding: 5; -fx-background-radius: 5;">
                        <Label style="-fx-text-fill: #FFA000; -fx-font-weight: bold;" text="Reserved"/>
                    </HBox>
                    <HBox alignment="CENTER"
                          style="-fx-background-color: #FFEBEE; -fx-padding: 5; -fx-background-radius: 5;">
                        <Label style="-fx-text-fill: #D32F2F; -fx-font-weight: bold;" text="Unavailable"/>
                    </HBox>
                </HBox>
                <Separator style="-fx-background-color: #E0E0E0;"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </top>
    <center>
        <!-- ScrollPane containing all layouts -->
        <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" pannable="true"
                    BorderPane.alignment="CENTER">
            <content>
                <HBox fx:id="layoutsContainer" alignment="CENTER" spacing="20"
                      style="-fx-background-color: #FFFFFF; -fx-padding: 20;"/>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <!-- Booking Button -->
        <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <Button fx:id="bookButton" disable="true" onAction="#handleBookSeats" prefHeight="30.0" prefWidth="120.0"
                    text="Book Selected Seats"
                    style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-background-radius: 5;">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
